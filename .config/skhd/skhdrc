cmd - return : alacritty

ctrl + alt + cmd - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# Navigation
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# Moving windows
shift + alt - h : yabai -m window --warp west
shift + alt - j : yabai -m window --warp south
shift + alt - k : yabai -m window --warp north
shift + alt - l : yabai -m window --warp east

# Moving to display
shift + alt + ctrl - h : w=$(yabai -m query --windows --window | jq '.id') && \
                      yabai -m window --display next && \
                      yabai -m window --focus ${w}
shift + alt + ctrl - l : w=$(yabai -m query --windows --window | jq '.id') && \
                      yabai -m window --display prev && \
                      yabai -m window --focus ${w}

# Moving to space
shift + cmd - 1 : yabai -m window --space 1
shift + cmd - 2 : yabai -m window --space 2
shift + cmd - 3 : yabai -m window --space 3
shift + cmd - 4 : yabai -m window --space 4
shift + cmd - 5 : yabai -m window --space 5
shift + cmd - 6 : yabai -m window --space 6

# Resizing windows
lctrl + alt - h : yabai -m window --resize left:-50:0; \
                  yabai -m window --resize right:-50:0
lctrl + alt - j : yabai -m window --resize bottom:0:50; \
                  yabai -m window --resize top:0:50
lctrl + alt - k : yabai -m window --resize top:0:-50; \
                  yabai -m window --resize bottom:0:-50
lctrl + alt - l : yabai -m window --resize right:50:0; \
                  yabai -m window --resize left:50:0


# Floating
shift + alt - s : \
    yabai -m window --toggle float

# Expose
cmd + ctrl + shift - up : yabai -m space --toggle mission-control

# Fullscreen
alt - f         : yabai -m window --toggle zoom-fullscreen; \
    yabai -m space --toggle padding

# Zoom parent
shift + alt - f : yabai -m window --toggle zoom-parent

# Rebalance
ctrl + alt - 0 : yabai -m space --balance


# float / unfloat window and center on screen
alt - t : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2
#
# float / unfloat window and center and full height on screen
shift + alt - t : w=$(yabai -m query --windows --window | jq '.pid') && \
          yabai -m query --windows --space | jq '.[].pid' | grep -ve $w | xargs -I '{}' ~/.local/bin/hide-window '{}'; \
          yabai -m window --toggle float;\
          yabai -m window --grid 1:4:1:1:2:2
